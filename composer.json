{
    "name": "anroots/dag",
    "description":"Model organization relations as a directed graph",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7",
        "laravel/lumen-framework": "5.2.*",
        "vlucas/phpdotenv": "~2.2",
        "ext-pdo":"*",
        "ext-mbstring": "*",
        "ext-openssl":"*"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.5",
        "phpunit/phpunit": "~5.0",
        "squizlabs/php_codesniffer": "~2.5"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
